---
const { pathname } = Astro.url;
const projectsHref = pathname === '/aboutme' ? './#projects' : '/#projects';

const navItems = [
    {
        title: "Projects",
        label: "projects",
        url: projectsHref
    },
    {
        title: "About me",
        label: "aboutme",
        url: "../aboutme"
    },
    {
        title: "Resume",
        label: "resume",
        url: "https://drive.google.com/file/d/10Xsy-Y_tQgh4hOICn2lZLaAIVg-WRumT/view?usp=sharing"
    }
]
---

<header id="whisper-header" class="sticky top-0 flex flex-row items-center justify-between pt-14 pb-20 px-6 bg-gradient-to-b from-black/40 to-black/0 z-50">
    <nav class="absolute z-[100] left-1/2 transform -translate-x-1/2 py-4 px-4 bg-neutral-800/80 rounded-full backdrop-blur border border-white/10 min-w-[293px] lg:min-w-[317px] ">
        <ul class="flex flex-row gap-x-2 text-white font-medium text-xs lg:text-sm">
            {
                navItems.map(({ title, label, url }) => (
                    <li>
                        <a 
                            href={url} 
                            aria-label={label}
                            class="py-2 px-4 rounded-full transition hover:bg-white/10"
                            target={title === 'Resume' ? '_blank' : '_self'}
                        >
                            {title}
                        </a>
                    </li>
                ))
            }
        </ul>
    </nav>
</header>