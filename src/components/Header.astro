---
const { pathname } = Astro.url;
const projectsHref = pathname === '/aboutme' ? './#projects' : '/#projects';

const navItems = [
    {
        title: "Projects",
        label: "projects",
        url: projectsHref
    },
    {
        title: "About me",
        label: "aboutme",
        url: "../aboutme"
    },
    {
        title: "Resume",
        label: "resume",
        url: "https://drive.google.com/file/d/1NZD5DrO7ZKEVEic9cvgsNBaMu7_bakxQ/view?usp=sharing"
    }
]
---

<header class="sticky top-0 flex flex-row items-center justify-between py-10 px-6">
    <nav class="absolute z-[100] left-1/2 transform -translate-x-1/2 py-4 px-4 bg-neutral-800/80 rounded-full backdrop-blur border border-white/10">
        <ul class="flex flex-row gap-x-2 text-white font-medium text-sm">
            {
                navItems.map(({title, label, url}) => (
                    <li>
                        <a 
                          href={url} 
                          aria-label={label}
                          class="py-2 px-4 rounded-full hover:bg-white/10 transition"
                        >
                            {title}
                        </a>
                    </li>
                ))
            }
        </ul>
    </nav>
</header>
