---
import HTMLIcon from './icons/HTMLIcon.astro';
import CSSIcon from './icons/CSSIcon.astro';
import JavaScriptIcon from './icons/JavaScriptIcon.astro';
import AstroIcon from './icons/AstroIcon.astro';
import TailwindIcon from './icons/TailwindIcon.astro'
import LinkButton from './LinkButton.astro';
import CodeIcon from './icons/CodeIcon.astro';
import PreviewIcon from './icons/PreviewIcon.astro';
import ReactIcon from './icons/ReactIcon.astro';
import ReactRouterIcon from './icons/ReactRouterIcon.astro';
import TypescriptIcon from './icons/TypescriptIcon.astro';
import ZustandIcon from './icons/ZustandIcon.astro'
import FramerIcon from './icons/FramerIcon.astro';
import SupabaseIcon from './icons/SupabaseIcon.astro';
import ReactqueryIcon from './icons/ReactqueryIcon.astro';
import ZodIcon from './icons/ZodIcon.astro';

const TAGS = {
    HTML: {
        name: 'HTML5',
        icon: HTMLIcon,
    },
    CSS: {
        name: 'CSS3',
        icon: CSSIcon,
    },
    JavaScript: {
        name: 'JavaScript',
        icon: JavaScriptIcon,
    },
    Astro: {
        name: 'Astro',
        icon: AstroIcon,
    },
    Tailwind: {
        name: 'Tailwind',
        icon: TailwindIcon,
    },
    React: {
        name: 'React',
        icon: ReactIcon,
    },
    ReactRouter: {
        name: 'React Router',
        icon: ReactRouterIcon,
    },
    Typescript: {
        name: 'Typescript',
        icon: TypescriptIcon,
    },
    Zustand: {
        name: 'Zustand',
        icon: ZustandIcon,
    },
    Framer: {
        name: 'Framer Motion',
        icon: FramerIcon,
    },
    Supabase: {
        name: 'Supabase',
        icon: SupabaseIcon,
    }, 
    ReactQuery: {
        name: 'React Query',
        icon: ReactqueryIcon,
    },
    Zod: {
        name: 'Zod',
        icon: ZodIcon,
    }
}

const PROJECTS = [
    {
        title: 'Nordheim',
        description: 'A full-stack e-commerce platform for premium, eco-friendly backpacks designed for both urban and mountain explorers. This project is built with TypeScript, React, and Zustand on the frontend, while Supabase handles authentication, database, and backend services. Featuring a seamless user experience, dynamic product pages, secure order management, and smooth animations with Framer Motion, Nordheim showcases my ability to develop scalable, high-performance web applications with a focus on UI/UX and modern development practices.',
        image: '/projects/nordheim.webp',
        link: 'https://nordheim.netlify.app/', // Cambia si aÃºn no tienes un dominio
        github: 'https://github.com/Whisperpiano/nordheim',
        tags: [TAGS.Typescript, TAGS.React, TAGS.ReactRouter, TAGS.Zustand, TAGS.Tailwind, TAGS.Framer, TAGS.Supabase, TAGS.ReactQuery, TAGS.Zod],
        color: 'bg-gradient-to-b from-[#92979c] to-transparent'
    },
    {
        title: 'Bidly',
        description: 'A modern auction house platform where I utilized advanced concepts and technologies, including TypeScript, React, Zustand, and React Hook Form. Additionally, integrated the Google Gemini API to enable users to generate AI-powered text. This project showcases my ability to build dynamic and interactive web applications with state management, form handling, and scalable architecture.',
        image: '/projects/bidly.webp',
        link: 'https://bidlify.netlify.app/',
        github: 'https://github.com/Whisperpiano/Bidly',
        tags: [TAGS.Typescript, TAGS.React, TAGS.ReactRouter, TAGS.Zustand, TAGS.Tailwind],
        color: 'bg-gradient-to-b from-[#007cf0] to-transparent'
    },
    {
        title: 'Noroff Social',
        description: 'A modern social network for Noroff students, built with TypeScript and React. Utilized React Router for seamless navigation and integrated the Imgur API to enable users to upload images easily.',
        image: '/projects/noroff_social.webp',
        link: 'https://noroff-social.netlify.app/',
        github: 'https://github.com/Whisperpiano/Social-Media-Noroff',
        tags: [TAGS.Typescript, TAGS.React, TAGS.ReactRouter, TAGS.Tailwind],
        color: 'bg-gradient-to-b from-[#39cbcb] to-transparent'
    },
    {
        title: 'SoundWaves Discoveries',
        description: 'Final project for the first year of my Front-end studies at Noroff School. Restriction of using only HTML, CSS, and vanilla JavaScript. No frameworks or libraries were used in this project.',
        image: '/projects/sw.webp',
        link: 'https://norofffeu.github.io/SoundWaves/',
        github: 'https://github.com/NoroffFEU/SoundWaves',
        tags: [TAGS.HTML, TAGS.CSS, TAGS.JavaScript],
        color: 'bg-gradient-to-b from-[#6d3e7f] to-transparent'
    },
    {
        title: 'CSM - Community Science Museum',
        description: 'Second project during my Front-end studies at Noroff School. For this project, the focus was to apply the knowledge gained in HTML and CSS.',
        image: '/projects/csm.webp',
        link: 'https://whisperpiano.github.io/CommunityScienceMuseum/index.html',
        github: 'https://github.com/Whisperpiano/CommunityScienceMuseum',
        tags: [TAGS.HTML, TAGS.CSS],
        color: 'bg-gradient-to-b from-[#f1c40f] to-transparent'
    },
    {
        title: 'GameOn',
        description: 'First project where I applied what I learned about HTML, CSS, and vanilla JavaScript during the first semester of my Front-end Development studies at Noroff School.',
        image: '/projects/gameon.webp',
        link: 'https://whisperpiano.github.io/GameOn/home/index.html',
        github: 'https://github.com/Whisperpiano/GameOn?tab=readme-ov-file',
        tags: [TAGS.HTML, TAGS.CSS, TAGS.JavaScript],
        color: 'bg-gradient-to-b from-[#fc6516] to-transparent'
    }
]
---

{
    PROJECTS.map(({ title, description, image, link, github, tags, color }) => {
        return (
            <article class="group pb-14 lg:pb-20 scroll-animation relative ">
                <div class="relative -z-[1] bg-gradient-to-b from-neutral-800/80 border border-white/20 rounded-xl aspect-video overflow-hidden">
                    <div class={` absolute inset-0 ${color} opacity-0 group-hover:opacity-50 transition duration-1000`}></div>
                    <img class="rounded shadow-2xl shadow-white/10 absolute top-0 left-0 group-hover:scale-105 transition duration-700" src={image} alt={`Screenshot of the project ${title}`} />
                </div>
            
                <ul class="flex flex-row flex-wrap items-center gap-x-4 py-3">
                    {tags.map((tag) => (
                        <li>
                            <span class={`flex items-center gap-x-2 rounded-full text-xs font-light py-1 px-3 pointer-events-none bg-neutral-800/80 text-white/75 mt-2`}>
                                <tag.icon class="size-3" />
                                 {tag.name}
                            </span>
                        </li>
                    ))}
                </ul>

                <h3 class="text-white text-xl lg:text-2xl font-semibold mt-2">{title}</h3>

                <p class="text-sm lg:text-lg text-white/50 font-[203] text-pretty py-2">{description}</p>
    
                <div class="flex flex-row  gap-4 py-2 text-white">
                    <LinkButton href={github}>
                        <CodeIcon class="size-5 lg:size-6" />
                        Code      
                    </LinkButton>

                    <LinkButton href={link}>
                        <PreviewIcon class="size-5 lg:size-6" />
                        Preview
                    </LinkButton>
                </div>
            </article>
        )
    })
}

<style>

    @keyframes show {
        from {
            opacity: 0;
            scale: 25%
        } to {
            opacity: 1;
            scale: 100%
        }
    }

    .scroll-animation {
        view-timeline-name: --article;
        view-timeline-axis: block;
        animation-timeline: --article;
        animation-name: show;
        animation-range: entry 0% cover 30%;
        animation-fill-mode: both;
    }
</style>
