---
import HTMLIcon from './icons/HTMLIcon.astro';
import CSSIcon from './icons/CSSIcon.astro';
import JavaScriptIcon from './icons/JavaScriptIcon.astro';
import AstroIcon from './icons/AstroIcon.astro';
import TailwindIcon from './icons/TailwindIcon.astro'

const TAGS = {
    HTML: {
        name: 'HTML',
        color: 'bg-red-500 text-white',
        icon: HTMLIcon,
    },

    CSS: {
        name: 'CSS',
        color: 'bg-blue-500 text-white',
        icon: CSSIcon,
    },

    JavaScript: {
        name: 'JavaScript',
        color: 'bg-yellow-500 text-black',
        icon: JavaScriptIcon,
    },

    Astro: {
        name: 'Astro',
        color: 'bg-green-500 text-white',
        icon: AstroIcon,
    },
    Tailwind: {
        name: 'Tailwind',
        color: 'bg-cyan-500 text-white',
        icon: TailwindIcon,
    },
}

const PROJECTS = [
{
        title: 'SoundWaves Discoveries',
        description: 'This is a project description',
        image: '/projects/sw_desktop_small.webp',
        link: 'https://norofffeu.github.io/FED1-PE1-Whisperpiano/index.html',
        github: 'https://github.com/NoroffFEU/FED1-PE1-Whisperpiano',
        tags: [TAGS.HTML, TAGS.CSS, TAGS.JavaScript, TAGS.Tailwind, TAGS.Astro]
    },
    {
        title: 'CSM - Community Science Museum',
        description: 'This is a project description',
        image: '/projects/csm_desktop_small.webp',
        link: 'https://whisperpiano.github.io/CommunityScienceMuseum/index.html',
        github: 'https://github.com/Whisperpiano/CommunityScienceMuseum',
        tags: [TAGS.HTML, TAGS.CSS]
    },
    {
        title: 'GameOn',
        description: 'This is a project description',
        image: '/projects/gameon_desktop_small.webp',
        link: 'https://whisperpiano.github.io/GameOn/home/index.html',
        github: 'https://github.com/Whisperpiano/GameOn?tab=readme-ov-file',
        tags: [TAGS.HTML, TAGS.CSS, TAGS.JavaScript]
    }
]
---

{
    PROJECTS.map(({ title, description, image, link, github, tags }) => {
        return (
            <article>
                <h3 class="text-2xl font-semibold text-purple-200 mb-2">{title}</h3>
                <p class="text-lg mb-4 text-pretty">{description}</p>
                <ul class="flex flex-row items-center gap-x-4 ">
                    {tags.map((tag) => (
                        <li>
                            <span class={`flex items-center gap-x-2 rounded-full text-xs py-1 px-2 ${tag.color}`}>
                                <tag.icon class="size-6" />
                                {tag.name}
                            </span>
                        </li>

                    ))}
                </ul>
                <img class="rounded shadow-2xl shadow-white/10" src={image} alt={`Screenshot of the project ${title}`} />
                <a href={link}>View Project</a>
                <a href={github}>View Code</a>
            </article>
        )
    })
}

